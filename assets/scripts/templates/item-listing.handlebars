{{#each items as |item|}}

<ul class="list-group">
  <li class="list-group-item">Item Name: {{item.name}}</li>
  <li class="list-group-item">Quantity: {{item.quantity}}</li>
  <li class="list-group-item">Price: {{item.price }}</li>
  <li class="list-group-item">
    <button type="button"  class="updateButton btn btn-primary" data-toggle="modal" data-target="#exampleModal">Update Item</button>
    <button type="button" data-id="{{item._id}}" class="deleteButton btn btn-primary">Delete Item</button>
  </li>
</ul>
<!--  Update Modal Starts Here -->
      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="updateModalLabel">Update Item</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form class="update-form" data-id="{{item._id}}">
                 <div class="form-group">
                  <label for="formGroupExampleInput">Name</label>
                  <input name = "item[name]" value="{{item.name}}" type="text" data-id="{{item._id}}" class="form-control">
                </div>
                <div class="form-group">
                  <label for="formGroupExampleInput">Price</label>
                  <input name ="item[price]" value="{{item.price}}" data-id="{{item._id}}" type="text" class="form-control">
                </div>
                <div class="form-group">
                  <label for="formGroupExampleInput2">Quantity in Stock</label>
                  <input  name ="item[quantity]" class="form-control" type="text" data-id="{{item._id}}" value="{{item.quantity}}"></input>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="submit" data-id="{{item._id}}"  class="updateSubmitButton btn btn-primary">Update</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <br>


{{/each}}
